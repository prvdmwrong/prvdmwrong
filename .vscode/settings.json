{
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "editor.formatOnSave": true
  },
  "eslint.format.enable": true,
  "eslint.run": "onType",
  "files.eol": "\n",
  "luau-lsp.ignoreGlobs": [
    "**/_Index/**",
    "examples/*",
    "dist/**"
  ],
  "luau-lsp.require.directoryAliases": {
    "@lune/": "~/.lune/.typedefs/0.8.6/",
    "prvdmwrong-core/": "packages/prvdmwrong/lib",
    "prvdmwrong-net/": "packages/prvdmwrong-net/lib",
    "prvdmwrong-components/": "packages/prvdmwrong-components/lib",
    "prvdmwrong-lifecycles/": "packages/prvdmwrong-lifecycles/lib",
    "knit-compat/": "packages/knit-compat/lib",
    "lumin-compat/": "packages/lumin-compat/lib",
  },
  "luau-lsp.require.mode": "relativeToFile",
  "typescript.tsdk": "node_modules/typescript/lib"
}
